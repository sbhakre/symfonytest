{% extends 'base.html.twig' %}

{% block title %}blog posts{% endblock %}

{% block body %}
<div class="container">
  <h2>List</h2>
            
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
	  {% for blog in blogs %}
      <tr>
        <td>{{ blog.id }}</td>
        <td><a href="{{ path('showpage', {'blogid': blog.id} )}}" target="_blank"> {{ blog.title }}</a></td>
        <td>{{ blog.content }}</td>
      </tr>
	  {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}